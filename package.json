{
  "name": "queer-grid-backend",
  "version": "1.0.0",
  "description": "GDPR-compliant email collection backend for Queer Grid",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "email-server": "node local-email-server.js",
    "email-dev": "nodemon local-email-server.js",
    "test": "jest",
    "db:migrate": "npx prisma migrate dev",
